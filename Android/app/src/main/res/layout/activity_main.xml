<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/hacker_bg"
    tools:context=".MainActivity">

    <!-- Custom Header Bar -->
    <LinearLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/hacker_primary"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="8dp">

        <!-- Help Button -->
        <ImageButton
            android:id="@+id/btnHelp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_help"
            android:contentDescription="@string/menu_rules"
            app:tint="@color/hacker_bg"
            android:padding="12dp" />

        <!-- Game Title -->
        <TextView
            android:id="@+id/tvToolbarTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/game_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/hacker_bg"
            android:fontFamily="monospace"
            android:gravity="center"
            android:letterSpacing="0.05" />

        <!-- Menu Button -->
        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_menu"
            android:contentDescription="@string/cd_menu_button"
            app:tint="@color/hacker_bg"
            android:padding="12dp" />

    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Removed game description to save space -->

            <!-- Game Controls -->
            <androidx.cardview.widget.CardView
                android:id="@+id/gameControlsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/hacker_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                        android:padding="10dp">

                <!-- 4-Digit Input Fields (Separate boxes for each digit) -->
                <LinearLayout
                    android:id="@+id/inputContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/digit1"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text=""
                        android:hint="•"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/hacker_text"
                        android:textColorHint="@color/hacker_text"
                        android:background="@drawable/input_background"
                        android:gravity="center"
                        android:fontFamily="monospace"
                        android:alpha="1.0"
                        android:clickable="false"
                        android:focusable="false" />

                    <TextView
                        android:id="@+id/digit2"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:text=""
                        android:hint="•"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/hacker_text"
                        android:textColorHint="@color/hacker_text"
                        android:background="@drawable/input_background"
                        android:gravity="center"
                        android:fontFamily="monospace"
                        android:alpha="1.0"
                        android:clickable="false"
                        android:focusable="false" />

                    <TextView
                        android:id="@+id/digit3"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:text=""
                        android:hint="•"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/hacker_text"
                        android:textColorHint="@color/hacker_text"
                        android:background="@drawable/input_background"
                        android:gravity="center"
                        android:fontFamily="monospace"
                        android:alpha="1.0"
                        android:clickable="false"
                        android:focusable="false" />

                    <TextView
                        android:id="@+id/digit4"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text=""
                        android:hint="•"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/hacker_text"
                        android:textColorHint="@color/hacker_text"
                        android:background="@drawable/input_background"
                        android:gravity="center"
                        android:fontFamily="monospace"
                        android:alpha="1.0"
                        android:clickable="false"
                        android:focusable="false" />

                </LinearLayout>

                <!-- Numpad moved to bottom for better UX -->

                <!-- Guess button moved to numpad (bottom right) -->

            </LinearLayout>

        </androidx.cardview.widget.CardView>

            <!-- Game Status -->
            <androidx.cardview.widget.CardView
                android:id="@+id/gameStatusCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/hacker_secondary"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvStatusMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/game_started"
                    android:textSize="16sp"
                    android:textColor="@color/hacker_text"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvAttempts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/attempts_count"
                    android:textSize="14sp"
                    android:textColor="@color/hacker_text"
                    android:alpha="0.8" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

            <!-- Last Guess & History Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/lastGuessCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/hacker_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                        android:padding="10dp">

                    <!-- Last Guess Header -->
                    <LinearLayout
                        android:id="@+id/lastGuessHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/hacker_secondary"
                        android:padding="8dp"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/history_guess"
                            android:textColor="@color/hacker_text"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:fontFamily="monospace" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/history_correct_digits"
                            android:textColor="@color/hacker_text"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:fontFamily="monospace" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/history_correct_positions"
                            android:textColor="@color/hacker_text"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:fontFamily="monospace" />

                    </LinearLayout>

                    <!-- Last Guess Display -->
                    <LinearLayout
                        android:id="@+id/lastGuessContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:background="@color/hacker_secondary"
                        android:padding="12dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvLastGuess"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1234"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/hacker_text"
                            android:fontFamily="monospace"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tvLastCorrectDigits"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/hacker_primary"
                            android:fontFamily="monospace"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tvLastCorrectPositions"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/hacker_accent"
                            android:fontFamily="monospace"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- History Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnShowHistory"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/btn_show_history"
                        android:textSize="14sp"
                        android:textColor="@color/hacker_bg"
                        android:backgroundTint="@color/hacker_primary"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.05"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/ic_history"
                        app:iconSize="20dp"
                        app:iconTint="@color/hacker_bg"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Custom Numpad (moved to bottom for better UX) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/numpadCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/hacker_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                        android:padding="10dp">

                    <!-- Row 1: 1, 2, 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn1"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:text="1"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/hacker_bg"
                            android:backgroundTint="@color/hacker_primary"
                            android:fontFamily="monospace"
                            app:cornerRadius="8dp"
                            style="@style/Widget.Material3.Button" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn2"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:text="2"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/hacker_bg"
                            android:backgroundTint="@color/hacker_primary"
                            android:fontFamily="monospace"
                            app:cornerRadius="8dp"
                            style="@style/Widget.Material3.Button" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn3"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="3"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/hacker_bg"
                            android:backgroundTint="@color/hacker_primary"
                            android:fontFamily="monospace"
                            app:cornerRadius="8dp"
                            style="@style/Widget.Material3.Button" />

                    </LinearLayout>

                    <!-- Row 2: 4, 5, 6 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn4"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:text="4"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/hacker_bg"
                            android:backgroundTint="@color/hacker_primary"
                            android:fontFamily="monospace"
                            app:cornerRadius="8dp"
                            style="@style/Widget.Material3.Button" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn5"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:text="5"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/hacker_bg"
                            android:backgroundTint="@color/hacker_primary"
                            android:fontFamily="monospace"
                            app:cornerRadius="8dp"
                            style="@style/Widget.Material3.Button" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn6"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="6"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/hacker_bg"
                            android:backgroundTint="@color/hacker_primary"
                            android:fontFamily="monospace"
                            app:cornerRadius="8dp"
                            style="@style/Widget.Material3.Button" />

                    </LinearLayout>

                    <!-- Row 3: 7, 8, 9 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn7"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:text="7"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/hacker_bg"
                            android:backgroundTint="@color/hacker_primary"
                            android:fontFamily="monospace"
                            app:cornerRadius="8dp"
                            style="@style/Widget.Material3.Button" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn8"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:text="8"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/hacker_bg"
                            android:backgroundTint="@color/hacker_primary"
                            android:fontFamily="monospace"
                            app:cornerRadius="8dp"
                            style="@style/Widget.Material3.Button" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn9"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="9"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/hacker_bg"
                            android:backgroundTint="@color/hacker_primary"
                            android:fontFamily="monospace"
                            app:cornerRadius="8dp"
                            style="@style/Widget.Material3.Button" />

                    </LinearLayout>

                        <!-- Row 4: Backspace, 0, Guess (✓) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnBackspace"
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="4dp"
                                android:text="⌫"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:backgroundTint="@color/error_red"
                                android:fontFamily="monospace"
                                app:cornerRadius="8dp"
                                style="@style/Widget.Material3.Button" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn0"
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:text="0"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/hacker_bg"
                                android:backgroundTint="@color/hacker_primary"
                                android:fontFamily="monospace"
                                app:cornerRadius="8dp"
                                style="@style/Widget.Material3.Button" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnGuess"
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                android:text="✓"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:backgroundTint="@color/success_green"
                                android:fontFamily="monospace"
                                app:cornerRadius="8dp"
                                style="@style/Widget.Material3.Button"
                                android:contentDescription="@string/cd_guess_button" />

                        </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
