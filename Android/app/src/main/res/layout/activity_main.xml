<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/hacker_bg"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Theme Selector -->
        <LinearLayout
            android:id="@+id/themeSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHackerTheme"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:text="@string/btn_theme_hacker"
                android:textColor="@color/hacker_bg"
                android:backgroundTint="@color/hacker_primary"
                app:icon="@drawable/ic_terminal"
                app:iconGravity="textStart"
                app:cornerRadius="8dp"
                style="@style/Widget.Material3.Button"
                android:contentDescription="@string/cd_theme_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnModernTheme"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:text="@string/btn_theme_modern"
                android:textColor="@color/hacker_text"
                android:backgroundTint="@color/hacker_secondary"
                app:icon="@drawable/ic_brush"
                app:iconGravity="textStart"
                app:cornerRadius="8dp"
                app:strokeColor="@color/hacker_border"
                app:strokeWidth="2dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:contentDescription="@string/cd_theme_button" />

        </LinearLayout>

        <!-- Game Header -->
        <LinearLayout
            android:id="@+id/gameHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/themeSelector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvGameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/hacker_text"
                android:fontFamily="monospace"
                android:letterSpacing="0.1"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvGameDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/game_description"
                android:textSize="16sp"
                android:textColor="@color/hacker_text"
                android:alpha="0.9"
                android:gravity="center" />

        </LinearLayout>

        <!-- Game Controls -->
        <androidx.cardview.widget.CardView
            android:id="@+id/gameControlsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/hacker_surface"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/gameHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Input Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/input_hint"
                    app:boxBackgroundColor="@color/hacker_input_bg"
                    app:boxStrokeColor="@color/hacker_border"
                    app:hintTextColor="@color/hacker_text"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etGuessInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textSize="18sp"
                        android:textColor="@color/hacker_text"
                        android:textAlignment="center"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.2"
                        android:contentDescription="@string/cd_guess_input" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGuess"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/btn_guess"
                        android:textColor="@color/hacker_bg"
                        android:backgroundTint="@color/hacker_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="8dp"
                        style="@style/Widget.Material3.Button"
                        android:contentDescription="@string/cd_guess_button" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNewGame"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/btn_new_game"
                        android:textColor="@color/hacker_text"
                        android:backgroundTint="@color/hacker_secondary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="8dp"
                        app:strokeColor="@color/hacker_border"
                        app:strokeWidth="2dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:contentDescription="@string/cd_new_game_button" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Game Status -->
        <androidx.cardview.widget.CardView
            android:id="@+id/gameStatusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/hacker_secondary"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/gameControlsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvStatusMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/game_started"
                    android:textSize="16sp"
                    android:textColor="@color/hacker_text"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvAttempts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/attempts_count"
                    android:textSize="14sp"
                    android:textColor="@color/hacker_text"
                    android:alpha="0.8" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Game History -->
        <androidx.cardview.widget.CardView
            android:id="@+id/gameHistoryCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/hacker_surface"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/gameStatusCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvHistoryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/hacker_text"
                    android:fontFamily="monospace"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- History Header -->
                <LinearLayout
                    android:id="@+id/historyHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/hacker_secondary"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/history_guess"
                        android:textColor="@color/hacker_text"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/history_correct_digits"
                        android:textColor="@color/hacker_text"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/history_correct_positions"
                        android:textColor="@color/hacker_text"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- History List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="200dp"
                    tools:listitem="@layout/item_history"
                    tools:itemCount="3" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Game Rules -->
        <androidx.cardview.widget.CardView
            android:id="@+id/gameRulesCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/hacker_secondary"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/gameHistoryCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvRulesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rules_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/hacker_text"
                    android:fontFamily="monospace"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rule_1"
                    android:textSize="14sp"
                    android:textColor="@color/hacker_text"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rule_2"
                    android:textSize="14sp"
                    android:textColor="@color/hacker_text"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rule_3"
                    android:textSize="14sp"
                    android:textColor="@color/hacker_text"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rule_4"
                    android:textSize="14sp"
                    android:textColor="@color/hacker_text"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rule_5"
                    android:textSize="14sp"
                    android:textColor="@color/hacker_text" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
