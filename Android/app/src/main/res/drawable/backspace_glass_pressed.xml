<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Bright glowing red base -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#60FFFFFF" />
            <stroke 
                android:width="3dp" 
                android:color="@color/error_red" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Intense red glow -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#80FF4444"
                android:endColor="#60FF4444"
                android:angle="270" />
            <corners android:radius="7dp" />
        </shape>
    </item>
    
    <!-- Bright flash effect -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#40FFFFFF" />
            <stroke 
                android:width="1dp" 
                android:color="#FFFFFFFF" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    
</layer-list>
