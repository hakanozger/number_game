<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base black glass background -->
    <item>
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#E0000000"
                android:endColor="#C0000000"
                android:angle="270" />
            <stroke 
                android:width="1dp" 
                android:color="@color/hacker_primary" />
        </shape>
    </item>
    
    <!-- Glass reflection on top -->
    <item android:bottom="32dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#40FFFFFF"
                android:endColor="#10FFFFFF"
                android:angle="270" />
        </shape>
    </item>
    
    <!-- Subtle green inner glow -->
    <item android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#2000CC00"
                android:endColor="#1000CC00"
                android:angle="270" />
        </shape>
    </item>
    
    <!-- Bottom shadow/depth -->
    <item android:top="58dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#00000000"
                android:endColor="#60000000"
                android:angle="270" />
        </shape>
    </item>
    
</layer-list>
