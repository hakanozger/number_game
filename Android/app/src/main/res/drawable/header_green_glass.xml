<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base green glass background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C000CC00" />
            <stroke 
                android:width="1dp" 
                android:color="#80FFFFFF" />
            <corners 
                android:bottomLeftRadius="16dp" 
                android:bottomRightRadius="16dp" />
        </shape>
    </item>
    
    <!-- Glass reflection on top -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="32dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#80FFFFFF"
                android:endColor="#40FFFFFF"
                android:angle="270" />
            <corners 
                android:bottomLeftRadius="14dp" 
                android:bottomRightRadius="14dp" />
        </shape>
    </item>
    
    <!-- Inner glass glow -->
    <item android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#40FFFFFF"
                android:endColor="#20FFFFFF"
                android:angle="270" />
            <corners 
                android:bottomLeftRadius="15dp" 
                android:bottomRightRadius="15dp" />
        </shape>
    </item>
    
    <!-- Bottom depth shadow -->
    <item android:top="58dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#00000000"
                android:endColor="#60000000"
                android:angle="270" />
            <corners 
                android:bottomLeftRadius="16dp" 
                android:bottomRightRadius="16dp" />
        </shape>
    </item>
    
</layer-list>
