<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base green glass background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#8000AA00" />
            <stroke 
                android:width="2dp" 
                android:color="#FFFFFFFF" />
            <corners 
                android:bottomLeftRadius="16dp" 
                android:bottomRightRadius="16dp" />
        </shape>
    </item>
    
    <!-- Glass reflection on top -->
    <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="32dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#B0FFFFFF"
                android:endColor="#60FFFFFF"
                android:angle="270" />
            <corners 
                android:bottomLeftRadius="13dp" 
                android:bottomRightRadius="13dp" />
        </shape>
    </item>
    
    <!-- Inner glass glow -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#60FFFFFF"
                android:endColor="#30FFFFFF"
                android:angle="270" />
            <corners 
                android:bottomLeftRadius="14dp" 
                android:bottomRightRadius="14dp" />
        </shape>
    </item>
    
    <!-- Bottom depth shadow -->
    <item android:top="58dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#00000000"
                android:endColor="#60000000"
                android:angle="270" />
            <corners 
                android:bottomLeftRadius="16dp" 
                android:bottomRightRadius="16dp" />
        </shape>
    </item>
    
</layer-list>
