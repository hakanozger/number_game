<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base header background with green tint -->
    <item>
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#E000CC00"
                android:endColor="#C000AA00"
                android:angle="270" />
        </shape>
    </item>
    
    <!-- Glass reflection on top -->
    <item android:bottom="50%">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#40FFFFFF"
                android:endColor="#10FFFFFF"
                android:angle="270" />
        </shape>
    </item>
    
    <!-- Subtle inner glow -->
    <item android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#3000FF00"
                android:endColor="#1000FF00"
                android:angle="270" />
        </shape>
    </item>
    
    <!-- Bottom shadow/depth -->
    <item android:top="90%" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#00000000"
                android:endColor="#40000000"
                android:angle="270" />
        </shape>
    </item>
    
</layer-list>
