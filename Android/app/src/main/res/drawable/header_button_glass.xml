<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base transparent background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#30000000" />
            <stroke 
                android:width="1dp" 
                android:color="#60FFFFFF" />
        </shape>
    </item>
    
    <!-- Glass highlight -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="60%">
        <shape android:shape="oval">
            <gradient 
                android:startColor="#50FFFFFF"
                android:endColor="#20FFFFFF"
                android:angle="270" />
        </shape>
    </item>
    
</layer-list>
