<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base glass button background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000" />
            <stroke 
                android:width="2dp" 
                android:color="@color/hacker_primary" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Green glow effect -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#3000CC00"
                android:endColor="#1000CC00"
                android:angle="270" />
            <corners android:radius="11dp" />
        </shape>
    </item>
    
    <!-- Top glass highlight -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#40FFFFFF"
                android:endColor="#20FFFFFF"
                android:angle="270" />
            <corners 
                android:topLeftRadius="10dp" 
                android:topRightRadius="10dp" />
        </shape>
    </item>
    
    <!-- Inner border glow -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="1dp" 
                android:color="#60FFFFFF" />
            <corners android:radius="11dp" />
        </shape>
    </item>
    
</layer-list>
