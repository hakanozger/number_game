<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base glass background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#15000000" />
            <stroke 
                android:width="2dp" 
                android:color="@color/hacker_primary" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Glass reflection - top part -->
    <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="25dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#30FFFFFF"
                android:endColor="#05FFFFFF"
                android:angle="270" />
            <corners 
                android:topLeftRadius="9dp" 
                android:topRightRadius="9dp" />
        </shape>
    </item>
    
    <!-- Inner subtle glow -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="1dp" 
                android:color="#40FFFFFF" />
            <corners android:radius="11dp" />
        </shape>
    </item>
    
</layer-list>
