<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base glass background with transparency -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <stroke 
                android:width="2dp" 
                android:color="@color/hacker_primary" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Glass shine effect - top highlight -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="50%">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#40FFFFFF"
                android:endColor="#10FFFFFF"
                android:angle="270" />
            <corners 
                android:topLeftRadius="6dp" 
                android:topRightRadius="6dp" />
        </shape>
    </item>
    
    <!-- Inner glow effect -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="1dp" 
                android:color="#60FFFFFF" />
            <corners android:radius="7dp" />
        </shape>
    </item>
    
</layer-list>
