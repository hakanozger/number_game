<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed state - bright red flash -->
    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/backspace_glass_pressed" />
        </layer-list>
    </item>
    
    <!-- Focused state -->
    <item android:state_focused="true">
        <layer-list>
            <item android:drawable="@drawable/backspace_glass_pressed" />
        </layer-list>
    </item>
    
    <!-- Default state - red glass -->
    <item>
        <layer-list>
            <item android:drawable="@drawable/backspace_glass_button" />
        </layer-list>
    </item>
    
</selector>
