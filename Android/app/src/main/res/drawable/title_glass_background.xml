<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base glass background for title -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#30000000" />
            <stroke 
                android:width="1dp" 
                android:color="@color/hacker_primary" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Glass shine effect -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="15dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#40FFFFFF"
                android:endColor="#10FFFFFF"
                android:angle="270" />
            <corners 
                android:topLeftRadius="11dp" 
                android:topRightRadius="11dp" />
        </shape>
    </item>
    
    <!-- Inner glow -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="1dp" 
                android:color="#40FFFFFF" />
            <corners android:radius="11dp" />
        </shape>
    </item>
    
</layer-list>
