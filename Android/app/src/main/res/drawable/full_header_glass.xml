<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base glass background for full header -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" />
            <stroke 
                android:width="2dp" 
                android:color="@color/hacker_primary" />
            <corners 
                android:bottomLeftRadius="16dp" 
                android:bottomRightRadius="16dp" />
        </shape>
    </item>
    
    <!-- Glass reflection on top -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="32dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#50FFFFFF"
                android:endColor="#20FFFFFF"
                android:angle="270" />
            <corners 
                android:bottomLeftRadius="14dp" 
                android:bottomRightRadius="14dp" />
        </shape>
    </item>
    
    <!-- Subtle green inner glow -->
    <item android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#3000CC00"
                android:endColor="#1000CC00"
                android:angle="270" />
            <corners 
                android:bottomLeftRadius="15dp" 
                android:bottomRightRadius="15dp" />
        </shape>
    </item>
    
    <!-- Inner border glow -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="1dp" 
                android:color="#60FFFFFF" />
            <corners 
                android:bottomLeftRadius="14dp" 
                android:bottomRightRadius="14dp" />
        </shape>
    </item>
    
    <!-- Bottom shadow/depth -->
    <item android:top="58dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#00000000"
                android:endColor="#80000000"
                android:angle="270" />
            <corners 
                android:bottomLeftRadius="16dp" 
                android:bottomRightRadius="16dp" />
        </shape>
    </item>
    
</layer-list>
